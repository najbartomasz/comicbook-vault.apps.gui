{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "./out-tsc/app",
        "types": [
            "node"
        ],
        "baseUrl": "./",
        "paths": {
            "@shell": [
                "src/app/shell/index.ts"
            ],
            "@shell/*": [
                "src/app/shell/*"
            ],
            "@lib/*": [
                "src/app/lib/*/index.ts"
            ],
            "@features/*": [
                "src/app/features/*/index.ts"
            ]
        }
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "src/**/*.spec.ts",
        "vitest*.config.ts"
    ]
}
