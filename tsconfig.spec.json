{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "./out-tsc/spec",
        "types": [
            "vitest/globals"
        ],
        "paths": {
            "@shell": [
                "src/app/shell/index.ts"
            ],
            "@api/*/infrastructure": [
                "src/app/api/*/infrastructure/index.ts"
            ],
            "@config/*/domain": [
                "src/app/config/*/domain/index.ts"
            ],
            "@config/*/infrastructure": [
                "src/app/config/*/infrastructure/index.ts"
            ],
            "@lib/*/core": [
                "src/app/lib/*/core/index.ts"
            ],
            "@lib/*/domain": [
                "src/app/lib/*/domain/index.ts"
            ],
            "@lib/*/application": [
                "src/app/lib/*/application/index.ts"
            ],
            "@lib/*/infrastructure": [
                "src/app/lib/*/infrastructure/index.ts"
            ],
            "@lib/*/presentation": [
                "src/app/lib/*/presentation/index.ts"
            ],
            "@features/*core": [
                "src/app/features/*/core/index.ts"
            ],
            "@features/*domain": [
                "src/app/features/*/domain/index.ts"
            ],
            "@features/*application": [
                "src/app/features/*/application/index.ts"
            ],
            "@features/*infrastructure": [
                "src/app/features/*/infrastructure/index.ts"
            ],
            "@features/*presentation": [
                "src/app/features/*/presentation/index.ts"
            ],
            "@testing/unit": [
                "src/testing/unit/index.ts"
            ],
            "@testing/unit/*": [
                "src/testing/unit/*/index.ts"
            ],
            "@testing/e2e/page-objects": [
                "src/testing/e2e/page-objects/index.ts"
            ]
        }
    },
    "include": [
        "src/**/*.d.ts",
        "src/**/*.spec.ts",
        "vitest*.config.ts",
        "vitest.setup.ts",
        "src/testing/**/*.ts"
    ]
}
