{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "./out-tsc/spec",
        "types": [
            "vitest/globals"
        ],
        "baseUrl": "./",
        "paths": {
            "@shell": [
                "src/app/shell/index.ts"
            ],
            "@shell/*": [
                "src/app/shell/*"
            ],
            "@lib/*": [
                "src/app/lib/*/index.ts"
            ],
            "@features/*": [
                "src/app/features/*/index.ts"
            ],
            "@testing/*": [
                "src/testing/*/index.ts"
            ],
            "@testing/unit": [
                "src/testing/unit/index.ts"
            ],
            "@testing/e2e/page-objects": [
                "src/testing/e2e/page-objects/index.ts"
            ]
        }
    },
    "include": [
        "src/**/*.d.ts",
        "src/**/*.spec.ts",
        "vitest*.config.ts",
        "src/testing/**/*.ts"
    ]
}
