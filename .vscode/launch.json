{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "ng serve",
            "type": "chrome",
            "request": "launch",
            "preLaunchTask": "npm: start",
            "url": "http://localhost:4200/",
            "webRoot": "${workspaceFolder}",
            "sourceMaps": true,
            "runtimeExecutable": "/usr/bin/chromium"
        },
        {
            "name": "ng test",
            "type": "node",
            "request": "launch",
            "preLaunchTask": "npm: test",
            "console": "internalConsole"
        }
    ]
}
