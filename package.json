{
  "name": "comicbook-vault.apps.gui",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "serve:ssr:comicbook-vault.apps.gui": "node dist/comicbook-vault.apps.gui/server/server.mjs",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:unit": "ng test --configuration=unit",
    "test:integration": "ng test --configuration=integration",
    "test:visual": "ng test --configuration=visual",
    "lint": "ng lint && npm run lint:styles && npm run lint:deps",
    "lint:fix": "ng lint --fix && npm run lint:styles:fix",
    "lint:code": "ng lint",
    "lint:code:fix": "ng lint --fix",
    "lint:styles": "stylelint \"**/*.scss\"",
    "lint:styles:fix": "stylelint \"**/*.scss\" --fix",
    "lint:deps": "depcruise --validate .dependency-cruiser.js src/",
    "analyze:deps": "madge --circular --warning src",
    "analyze:orphans": "madge --orphans --warning src",
    "visualize:modules": "madge --image docs/module-dependencies.svg --warning src",
    "visualize:layers": "depcruise --output-type dot src/ | node docs/scripts/dependency-cruiser/colorize-dependencies.js | docs/scripts/dependency-cruiser/render-dot.sh",
    "docs:metrics": "node docs/scripts/metrics/generate-architecture-metrics.js",
    "docs:validate": "npm run analyze:deps && npm run visualize:modules && npm run visualize:layers && npm run docs:metrics",
    "prepare": "husky"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "npm@10.9.2",
  "dependencies": {
    "@angular/cdk": "21.1.1",
    "@angular/common": "21.1.1",
    "@angular/compiler": "21.1.1",
    "@angular/core": "21.1.1",
    "@angular/forms": "21.1.1",
    "@angular/material": "21.1.1",
    "@angular/platform-browser": "21.1.1",
    "@angular/platform-server": "21.1.1",
    "@angular/router": "21.1.1",
    "@angular/ssr": "21.1.1",
    "express": "5.2.1",
    "rxjs": "7.8.2",
    "tslib": "2.8.1"
  },
  "devDependencies": {
    "@angular-eslint/builder": "21.1.0",
    "@angular-eslint/eslint-plugin": "21.1.0",
    "@angular-eslint/eslint-plugin-template": "21.1.0",
    "@angular-eslint/schematics": "21.1.0",
    "@angular-eslint/template-parser": "21.1.0",
    "@angular/build": "21.1.1",
    "@angular/cli": "21.1.1",
    "@angular/compiler-cli": "21.1.1",
    "@eslint/js": "9.39.2",
    "@stylistic/eslint-plugin": "5.7.1",
    "@testing-library/angular": "19.0.0",
    "@types/express": "5.0.6",
    "@types/node": "25.0.10",
    "@typescript-eslint/eslint-plugin": "8.53.1",
    "@typescript-eslint/parser": "8.53.1",
    "@vitest/browser-playwright": "4.0.18",
    "@vitest/coverage-v8": "4.0.18",
    "@vitest/eslint-plugin": "1.6.6",
    "dependency-cruiser": "17.3.7",
    "eslint": "9.39.2",
    "eslint-import-resolver-typescript": "4.4.4",
    "eslint-plugin-boundaries": "5.3.1",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-promise": "7.2.1",
    "eslint-plugin-security": "3.0.1",
    "eslint-plugin-sonarjs": "3.0.5",
    "globals": "17.1.0",
    "husky": "9.1.7",
    "jsdom": "27.4.0",
    "madge": "8.0.0",
    "playwright": "1.58.0",
    "postcss-scss": "4.0.9",
    "stylelint": "17.0.0",
    "stylelint-config-standard-scss": "17.0.0",
    "typescript": "5.9.3",
    "typescript-eslint": "8.53.1",
    "vite-tsconfig-paths": "6.0.5",
    "vitest": "4.0.18"
  }
}
